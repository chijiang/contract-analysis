# 后端服务基础地址，仅在 Next.js 服务器端调用 Python 服务时使用
INTERNAL_BACKEND_URL=http://localhost:8000

# 可选：分别覆盖不同的后端模块地址
# BASIC_INFO_API_BASE_URL=
# NON_STANDARD_ANALYSIS_API_BASE_URL=

# Prisma 数据库连接
DATABASE_URL="file:./prisma/dev.db"

# 文件存储提供者，可选 local 或 s3
FILE_STORAGE_PROVIDER=local

# 本地文件存储根目录（FILE_STORAGE_PROVIDER=local 时使用）
LOCAL_STORAGE_ROOT=./storage/uploads

# 邮件通知配置
# 如需启用批量上传完成后的邮件提醒，请填写以下 SMTP 设置
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false
NOTIFICATION_EMAIL_FROM=
